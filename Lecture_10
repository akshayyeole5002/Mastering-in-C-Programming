// Array


/*

 // 1) In C programming, is collection of elements of the same data type stored 
      in contiguous memory locations.
 
 // 2) Each element in the array is identified by its index or position, 
      starting from 0.

#  1) Declaration:

To use an array, you need to declare it,specifying the data type of its element
and the array's name.

For example:

// int number[5]; //declares an integer array named 'number' with 5 elements

# 2) Initialization:

int number[5] = {1,2,3,4,5};
// Initialization during declaration 

// or

for (int i = 0;i < 5; i++){
    number[i] = i + 1; // Initialization using a loop
}

*/

/*

#include <stdio.h>
int main(){
    
    // Declare and initialize an array
    int number[] = {1,2,3,4,5};
    
    // Calculate the sum of array elements
    int sum = 0;
    
    for(int i = 0; i < 5;i++){
        sum += number[i];
    }
    
    // Print the sum
    printf("The of the array element is:%d\n",sum);
    
    
    return 0;
}

*/

/*

#include <stdio.h>
int main(){
    
    int number[] = {1,2,3,4,5};
    
    // Print each element of the array
    
    for(int i = 0;i < 5; i++){    // 0 = 1 1 = 2 2 = 3 3 = 4 4 = 5
        printf("Element %d: %d\n",i+1,number[i]);
    }
    
    return 0;
}

*/


// Code 3: Finding Maximum Element


/*


#include <stdio.h>
int main(){
    int number[] = {12,7,8,10,7,9,10,45,15,10};
    int max = number[0];
    
    for(int i = 0; i < 10; i++){
        if(number[i] > max){
            max = number[i];
        }
    }
    
    printf("Maximum element:%d\n",max);
    
    return 0;
}

*/


// Code 4: Average of Array elements

/*

#include <stdio.h>
int main(){
    int number[] = {1,2,3,4,5};
    
    int sum = 0;
    for(int i = 0; i < 5;i++){
        sum += number[i];
    }
    double average = (double)sum / 5;
    
    printf("Average of array elements: %.2f\n",average);
    return 0;
}

*/

// Code 5: Reversing an array

/*

#include <stdio.h>
int main()
{
    int number[] = {2,4,6,8,10};
    int reversed[5];  
    
    for (int i = 0; i < 5; i++){
        reversed[i] = number[4 - i];
        
    }
    printf("Orignal Array:");
    for(int i = 0; i < 5; i++){
        printf("%d",number[i]);
    }
    
    printf("\nReversed Array:");
    for(int i = 0; i < 5; i++){
        printf("%d",reversed[i]);
    }    
        
    return 0;
}

*/


// Code 6: Counting Even Numbers and Odd number

/*

#include <stdio.h>
int main(){
    
    int number[] = {2,4,6,8,10,1,3,7,15,13};
    int evenCount = 0;
    int oddCount = 0;
    
    
    for (int i = 0; i < 10; i++){
        if(number[i] %2 == 0){
            evenCount++;
        }
        else{
            oddCount++;
        }
    }
    printf("Number of even elements: %d\n", evenCount);
    printf("Number of odd elements: %d\n", oddCount);
    
    
    return 0;
}

*/
